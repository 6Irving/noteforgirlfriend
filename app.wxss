/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.section{
  width: 80%;
}
.ipt{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 100rpx 0 20rpx;
  border: 1rpx solid #999;
  border-radius: 5rpx;
  box-sizing: border-box;
  font-size: 18px;
  color: #333;
  text-align: center;
}
.input-placeholder{
  width: 100%;
  text-align: center;
  font-size: 25rpx;
  color: #aaa;
}
.btn{
  width: 100%;
  margin-bottom: 100rpx;
}
